<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".showCategories">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp"
        android:hint="Following are the available categories."
        android:layout_marginLeft="20dp"
        android:textSize="24sp"
        android:textColor="#000" />

    <TextView
        android:id="@+id/opt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="20dp"
        android:text="Flyover"/>


    <TextView
        android:id="@+id/opt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/opt1"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="20dp"
        android:text="Bridge"/>

    <TextView
        android:id="@+id/opt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/opt2"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="20dp"
        android:text="Building"/>

    <TextView
        android:id="@+id/opt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/opt3"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="20dp"
        android:text="Road"/>

    <TextView
        android:id="@+id/opt5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/opt4"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="20dp"
        android:text="Colony"/>

